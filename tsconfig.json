{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
		"module": "commonjs",
		"target": "es5",
		"lib": [
			"es6",
			"dom",
			"esnext"
		],
		"sourceMap": true,
		"jsx": "react",
		"moduleResolution": "node",
		"alwaysStrict": true,
		"newLine": "crlf",
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"experimentalDecorators": true,
		"removeComments": true,
		"strict": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"acceptance-tests",
		"webpack",
		"jest",
		"src/setupTests.ts"
	]
}
